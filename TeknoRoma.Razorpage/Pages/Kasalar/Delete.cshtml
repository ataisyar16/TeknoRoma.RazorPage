@page
@model TeknoRoma.Razorpage.Pages.Kasalar.DeleteModel
@{
    ViewData["Title"] = "Kasa Sil";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Kasa Sil</h1>
<div class="card">
    <div class="card-header">Silme Onayı</div>
    <div class="card-body">
        <h5>Bu faturayi silmek istediğinize emin misiniz?</h5>
        <p><strong>Birim Kodu:</strong> @Model.Kasa.KasaKodu</p>
        <p><strong>Açıklama:</strong> @Model.Kasa.SubeKodu</p>
        <p><strong>Açıklama:</strong> @Model.Kasa.DovizId</p>
        <p><strong>Açıklama:</strong> @Model.Kasa.Bakiye</p>
        <form method="post">
            <input type="hidden" asp-for="Kasa.Id" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-page="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
