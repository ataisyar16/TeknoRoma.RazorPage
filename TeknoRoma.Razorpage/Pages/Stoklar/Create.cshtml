@page
@model TeknoRoma.Razorpage.Pages.Stoklar.CreateModel
@{
    ViewData["Title"] = "Yeni Stok Ekle";
}

<h1>Yeni Stok Ekle</h1>

<div class="col-md-6 col-lg-5 col-xl-4 mt-5 mt-md-0">
    <form id="form" class="form-group flex-wrap bg-white p-5 rounded-4 ms-md-5" method="post">
        <h3 class="display-5">Register Form</h3>

        <div class="col-lg-12 my-4">
            <label class="form-label text-uppercase" asp-for="@Model.InsertModel.StokAdi">Stok Adi</label>
            <input class="form-control text-black-50 ps-3" asp-for="@Model.InsertModel.StokAdi">
            <span asp-validation-for="@Model.InsertModel.StokAdi" class="text-danger"></span>
        </div>
        <div class="col-lg-12 my-4">
            <label class="form-label text-uppercase" asp-for="@Model.InsertModel.StokKodu">Stok Kodu</label>
            <input class="form-control text-black-50 ps-3" asp-for="@Model.InsertModel.StokKodu">
            <span asp-validation-for="@Model.InsertModel.StokKodu" class="text-danger"></span>

        </div>
        <div class="col-lg-12 my-4">
            <label class="form-label text-uppercase" asp-for="@Model.InsertModel.DepoId">Depo Id</label>
            <input class="form-control text-black-50 ps-3" asp-for="@Model.InsertModel.DepoId">
            <span asp-validation-for="@Model.InsertModel.DepoId" class="text-danger"></span>

        </div>
        <div class="col-lg-12 my-4">
            <label class="form-label text-uppercase" asp-for="@Model.InsertModel.StokAdet">Stok Adet</label>
            <input class="form-control text-black-50 ps-3" asp-for="@Model.InsertModel.StokAdet">
            <span asp-validation-for="@Model.InsertModel.StokAdet" class="text-danger"></span>

        </div>
        <div class="col-lg-12 my-4">
            <label class="form-label text-uppercase" asp-for="@Model.InsertModel.BirimId">Birim Id</label>
            <input class="form-control text-black-50 ps-3" asp-for="@Model.InsertModel.BirimId">
            <span asp-validation-for="@Model.InsertModel.BirimId" class="text-danger"></span>

        </div>
        <div class="col-lg-12 my-4">
            <label class="form-label text-uppercase" asp-for="@Model.InsertModel.Fiyat">Fiyat</label>
            <input class="form-control text-black-50 ps-3" asp-for="@Model.InsertModel.Fiyat">
            <span asp-validation-for="@Model.InsertModel.Fiyat" class="text-danger"></span>

        </div>
        <div class="col-lg-12 my-4">
            <label class="form-label text-uppercase" asp-for="@Model.InsertModel.KategoriId">Kategori Id</label>
            <input class="form-control text-black-50 ps-3" asp-for="@Model.InsertModel.KategoriId">
            <span asp-validation-for="@Model.InsertModel.KategoriId" class="text-danger"></span>

        </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-arrow btn-primary mt-3">
                    <span>
                        Submit
                        <svg width="18" height="18">
                            <use xlink:href="#arrow-right"></use>
                        </svg>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>
