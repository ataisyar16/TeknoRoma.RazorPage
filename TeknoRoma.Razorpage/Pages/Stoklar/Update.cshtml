@page "{id:int}"
@model TeknoRoma.Razorpage.Pages.Stoklar.UpdateModel
@{
    ViewData["Title"] = "Stok Güncelle";
}
<h2>Stok Güncelle</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="EditModel.StokAdi"></label>
        <input asp-for="EditModel.StokAdi" class="form-control" />
        <span asp-validation-for="EditModel.StokAdi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditModel.StokKodu"></label>
        <input asp-for="EditModel.StokKodu" class="form-control" />
        <span asp-validation-for="EditModel.StokKodu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditModel.DepoId"></label>
        <input asp-for="EditModel.DepoId" class="form-control" />
        <span asp-validation-for="EditModel.DepoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditModel.StokAdet"></label>
        <input asp-for="EditModel.StokAdet" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EditModel.BirimId"></label>
        <input asp-for="EditModel.BirimId" class="form-control" />
        <span asp-validation-for="EditModel.BirimId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditModel.Fiyat"></label>
        <input asp-for="EditModel.Fiyat" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EditModel.KategoriId"></label>
        <input asp-for="EditModel.KategoriId" class="form-control" />
        <span asp-validation-for="EditModel.KategoriId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
