@page
@model TeknoRoma.Razorpage.Pages.KasaHareketler.IndexModel
@{
    ViewData["Title"] = "Faturalar";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">
        <a asp-page="Create" class="btn btn-primary">Add New Fatura</a>
    </h5>
    <div class="">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>KasaId</th>
                    <th> DovizId</th>
                    <th>HareketTipi</th>
                    <th>Giris</th>
                    <th>Cikis</th>
                    <th>Tutar</th>
                    <th>Tarih</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var kasaHareket in Model.KasaHareketler)
                {
                    <tr>
                        <td><strong>@kasaHareket.KasaId</strong></td>
                        <td><strong>@kasaHareket.DovizId</strong></td>
                        <td><strong>@kasaHareket.HareketTipi</strong></td>
                        <td><strong>@kasaHareket.Giris</strong></td>
                        <td><strong>@kasaHareket.Cikis</strong></td>
                        <td><strong>@kasaHareket.Tutar</strong></td>
                        <td><strong>@kasaHareket.Tarih</strong></td>
                        <td>
                            @{
                                if (kasaHareket.KasaId != null)
                                {
                                    <strong>@kasaHareket.KasaId</strong>

                                }
                            }
                        </td>

                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-page="Update" asp-route-id="@kasaHareket.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" asp-page="Delete" asp-route-id="@kasaHareket.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

