@page
@model TeknoRoma.Razorpage.Pages.SiparisDetaylari.IndexModel
@{
    ViewData["Title"] = "Sipariş Detayları Listesi";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">
        <a asp-page="Create" class="btn btn-primary">Add New Sipariş Detay</a>
    </h5>
    <div class="">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>SiparisId</th>
                    <th> StokId</th>
                    <th>Miktar</th>
                    <th>BirimFiyat</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var siparisDetay in Model.SiparisDetaylar)
                {
                    <tr>
                        <td><strong>@siparisDetay.SiparisId</strong></td>
                        <td><strong>@siparisDetay.StokId</strong></td>
                        <td><strong>@siparisDetay.Miktar</strong></td>
                        <td><strong>@siparisDetay.BirimFiyat</strong></td>
                        <td>
                            @{
                                if (siparisDetay.SiparisId != null)
                                {
                                    <strong>@siparisDetay.SiparisId</strong>

                                }
                            }
                        </td>

                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-page="Update" asp-route-id="@siparisDetay.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" asp-page="Delete" asp-route-id="@siparisDetay.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

