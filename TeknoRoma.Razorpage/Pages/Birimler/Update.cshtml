@page 
@model TeknoRoma.Razorpage.Pages.Birimler.UpdateModel
@{
    ViewData["Title"] = "Birim Güncelle";
}

<h1>Birim Güncelle</h1>
<div class="card">
    <div class="card-header">Birim Bilgileri</div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="EditModel.BirimKodu"></label>
                <input asp-for="EditModel.BirimKodu" class="form-control" />
                <span asp-validation-for="EditModel.BirimKodu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditModel.Aciklama"></label>
                <input asp-for="EditModel.Aciklama" class="form-control" />
                <span asp-validation-for="EditModel.Aciklama" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />