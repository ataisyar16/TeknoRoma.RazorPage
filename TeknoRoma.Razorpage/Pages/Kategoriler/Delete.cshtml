@page
@model TeknoRoma.Razorpage.Pages.Kategoriler.DeleteModel
@{
    ViewData["Title"] = "Kategori Sil";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Kategori Sil</h1>
<div class="card">
    <div class="card-header">Silme Onayı</div>
    <div class="card-body">
        <h5>Bu faturayi silmek istediğinize emin misiniz?</h5>
        <p><strong>Birim Kodu:</strong> @Model.Kategori.KategoriAdi</p>
       
        <form method="post">
            <input type="hidden" asp-for="Kategori.Id" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-page="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
