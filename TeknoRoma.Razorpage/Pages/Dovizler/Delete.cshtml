@page
@model TeknoRoma.Razorpage.Pages.Dovizler.DeleteModel
@{
    ViewData["Title"] = "Döviz'i Sil";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Fatura Sil</h1>
<div class="card">
    <div class="card-header">Silme Onayı</div>
    <div class="card-body">
        <h5>Bu faturayi silmek istediğinize emin misiniz?</h5>
        <p><strong>Birim Kodu:</strong> @Model.Doviz.DovizKodu</p>
        <p><strong>Açıklama:</strong> @Model.Doviz.DovizAdi</p>
        <p><strong>Açıklama:</strong> @Model.Doviz.Kur</p>
       
        <form method="post">
            <input type="hidden" asp-for="Doviz.Id" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-page="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
