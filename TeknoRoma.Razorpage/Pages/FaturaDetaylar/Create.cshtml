@page
@model TeknoRoma.Razorpage.Pages.FaturaDetaylar.CreateModel
@{
    ViewData["Title"] = "Yeni Birim Ekle";
}
<h1>Yeni Birim Ekle</h1>
<div class="card">
    <div class="card-header">Birim Bilgileri</div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.InsertModel.FaturaId"></label>
                <input asp-for="InsertModel.FaturaId" class="form-control" />
                <span asp-validation-for="InsertModel.FaturaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsertModel.StokId"></label>
                <input asp-for="InsertModel.StokId" class="form-control" />
                <span asp-validation-for="InsertModel.StokId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.InsertModel.Miktar"></label>
                <input asp-for="InsertModel.Miktar" class="form-control" />
                <span asp-validation-for="InsertModel.Miktar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.InsertModel.Fiyat"></label>
                <input asp-for="InsertModel.Fiyat" class="form-control" />
                <span asp-validation-for="InsertModel.Fiyat" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />
