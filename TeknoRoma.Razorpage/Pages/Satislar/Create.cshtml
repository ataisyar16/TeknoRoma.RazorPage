@page
@model TeknoRoma.Razorpage.Pages.Satislar.CreateModel
@{
    ViewData["Title"] = "Yeni Satış Ekle";
}
<h1>Yeni Satış Ekle</h1>

<div class="card">
    <div class="card-header">Satış Bilgileri</div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="InsertModel.CariId"></label>
                <input asp-for="InsertModel.CariId" class="form-control" />
                <span asp-validation-for="InsertModel.CariId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsertModel.PersonelId"></label>
                <input asp-for="InsertModel.PersonelId" class="form-control" />
                <span asp-validation-for="InsertModel.PersonelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsertModel.SubeId"></label>
                <input asp-for="InsertModel.SubeId" class="form-control" />
                <span asp-validation-for="InsertModel.SubeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsertModel.SatisTarihi"></label>
                <input asp-for="InsertModel.SatisTarihi" class="form-control" type="date" />
                <span asp-validation-for="InsertModel.SatisTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsertModel.ToplamTutar"></label>
                <input asp-for="InsertModel.ToplamTutar" class="form-control" />
                <span asp-validation-for="InsertModel.ToplamTutar" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
        </form>
    </div>
</div>
