@page
@model TeknoRoma.Razorpage.Pages.Satislar.IndexModel
@{
    ViewData["Title"] = "Satış Listesi";
}
<h1>Satış Listesi</h1>

<table class="table">
    <thead>
        <tr>
            <th>Cari</th>
            <th>Personel</th>
            <th>Şube</th>
            <th>Satış Tarihi</th>
            <th>Toplam Tutar</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var satis in Model.Satislar)
        {
            <tr>
                <td>@satis.CariId</td>
                <td>@satis.PersonelId</td>
                <td>@satis.SubeId</td>
                <td>@satis.SatisTarihi?.ToString("yyyy-MM-dd")</td>
                <td>@satis.ToplamTutar</td>
                <td>
                    <a href="/Cariler/Update/@satis.Id" class="btn btn-warning">Güncelle</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@satis.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>