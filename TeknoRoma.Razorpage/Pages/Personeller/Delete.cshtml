@page
@model TeknoRoma.Razorpage.Pages.Personeller.DeleteModel
@{
    ViewData["Title"] = "Personel Sil";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Personel Sil</h1>
<div class="card">
    <div class="card-header">Silme Onayı</div>
    <div class="card-body">
        <h5>Bu personeli silmek istediğinize emin misiniz?</h5>
        <p><strong>Birim Kodu:</strong> @Model.Personel.SubeId</p>
        <p><strong>Açıklama:</strong> @Model.Personel.Ad</p>
        <p><strong>Açıklama:</strong> @Model.Personel.Soyad</p>
        <p><strong>Açıklama:</strong> @Model.Personel.TcNo</p>
        <p><strong>Açıklama:</strong> @Model.Personel.DepartmanId</p>
        <p><strong>Açıklama:</strong> @Model.Personel.Cinsiyet</p>
        <p><strong>Açıklama:</strong> @Model.Personel.Gorev</p>
        <form method="post">
            <input type="hidden" asp-for="Personel.Id" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-page="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
