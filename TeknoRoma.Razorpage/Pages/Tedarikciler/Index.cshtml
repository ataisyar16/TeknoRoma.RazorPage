@page
@model TeknoRoma.Razorpage.Pages.Tedarikciler.IndexModel
@{
    ViewData["Title"] = "Faturalar";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">
        <a asp-page="Create" class="btn btn-primary">Add New Tedarikçi</a>
    </h5>
    <div class="">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th> Telefon</th>
                    <th>Email</th>
                    <th>Adres</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var tedarikci in Model.Tedarikciler)
                {
                    <tr>
                        <td><strong>@tedarikci.Ad</strong></td>
                        <td><strong>@tedarikci.Telefon</strong></td>
                        <td><strong>@tedarikci.Email</strong></td>
                        <td><strong>@tedarikci.Adres</strong></td>
                        <td>
                            @{
                                if (tedarikci.Ad != null)
                                {
                                    <strong>@tedarikci.Ad</strong>

                                }
                            }
                        </td>

                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-page="Update" asp-route-id="@tedarikci.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" asp-page="Delete" asp-route-id="@tedarikci.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

