@page
@model TeknoRoma.Razorpage.Pages.Tedarikciler.DeleteModel
@{
    ViewData["Title"] = "Tedarikçi Sil";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Tedarikçi Sil</h1>
<div class="card">
    <div class="card-header">Silme Onayı</div>
    <div class="card-body">
        <h5>Bu tedarikçiyi silmek istediğinize emin misiniz?</h5>
        <p><strong>Birim Kodu:</strong> @Model.Tedarikci.Ad</p>
        <p><strong>Açıklama:</strong> @Model.Tedarikci.Telefon</p>
        <p><strong>Açıklama:</strong> @Model.Tedarikci.Email</p>
        <p><strong>Açıklama:</strong> @Model.Tedarikci.Adres</p>
        <form method="post">
            <input type="hidden" asp-for="Tedarikci.Id" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-page="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
