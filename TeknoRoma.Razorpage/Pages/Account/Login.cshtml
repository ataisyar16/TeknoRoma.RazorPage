@page
@model TeknoRoma.Razorpage.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="col-md-6 col-lg-5 col-xl-4 mt-5 mt-md-0">
    <form id="form" class="form-group flex-wrap bg-white p-5 rounded-4 ms-md-5" method="post">
        <h3 class="display-5">Login Form</h3>

        <div class="col-lg-12 my-4">
            <label class="form-label text-uppercase" asp-for="ModelInput.FullName">Full Name</label>
            <input class="form-control text-black-50 ps-3" asp-for="ModelInput.FullName">
            <span asp-validation-for="ModelInput.FullName" class="text-danger"></span>
        </div>

        <div class="col-lg-12 my-4">
            <label class="form-label text-uppercase" asp-for="ModelInput.Password">Password</label>
            <div class="input-group">
                <input class="form-control text-black-50 ps-3" asp-for="ModelInput.Password" type="password" id="passwordInput">
                <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility()">👁</button>
            </div>
            <span asp-validation-for="ModelInput.Password" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-arrow btn-primary mt-3">
                <span>
                    Login
                    <svg width="18" height="18">
                        <use xlink:href="#arrow-right"></use>
                    </svg>
                </span>
            </button>
        </div>
    </form>
</div>

<partial name="_ValidationScriptsPartial" />

<script>
    function togglePasswordVisibility() {
        const passwordInput = document.getElementById('passwordInput');
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
        } else {
            passwordInput.type = 'password';
        }
    }
</script>
