@page
@model TeknoRoma.Razorpage.Pages.Menuler.UpdateModel
@{
    ViewData["Title"] = "Menü Güncelle";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Menü Güncelle</h2>
    <div class="card shadow-lg p-4">
        <form method="post">
            <div class="form-group mb-3">
                <label for="MenuAdi" class="form-label fw-bold">Menü Adı <span class="text-danger">*</span></label>
                <input type="text" class="form-control @((ViewData.ModelState["MenuUpdateVM.MenuAdi"]?.Errors.Count ?? 0) > 0 ? "is-invalid" : "")" id="MenuAdi" name="MenuUpdateVM.MenuAdi" value="@Model.MenuUpdateVM.MenuAdi" />
                <div class="invalid-feedback">
                    @ViewData.ModelState["MenuUpdateVM.MenuAdi"]?.Errors.FirstOrDefault()?.ErrorMessage
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="Page" class="form-label fw-bold">Sayfa</label>
                <input type="text" class="form-control" id="Page" name="MenuUpdateVM.Page" value="@Model.MenuUpdateVM.Page" />
            </div>

            <div class="form-group mb-3">
                <label for="Icon" class="form-label fw-bold">İkon</label>
                <input type="text" class="form-control" id="Icon" name="MenuUpdateVM.Icon" value="@Model.MenuUpdateVM.Icon" />
            </div>

            <div class="form-group mb-3">
                <label for="Css" class="form-label fw-bold">CSS</label>
                <input type="text" class="form-control" id="Css" name="MenuUpdateVM.Css" value="@Model.MenuUpdateVM.Css" />
            </div>

            <div class="form-group mb-3">
                <label for="Area" class="form-label fw-bold">Alan</label>
                <input type="text" class="form-control" id="Area" name="MenuUpdateVM.Area" value="@Model.MenuUpdateVM.Area" />
            </div>

            <div class="form-group mb-3">
                <label for="Title" class="form-label fw-bold">Başlık</label>
                <input type="text" class="form-control" id="Title" name="MenuUpdateVM.Title" value="@Model.MenuUpdateVM.Title" />
            </div>

            <div class="form-group mb-3">
                <label for="Description" class="form-label fw-bold">Açıklama</label>
                <textarea class="form-control" id="Description" name="MenuUpdateVM.Description">@Model.MenuUpdateVM.Description</textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-4">Güncelle</button>
                <a href="/Menuler/Index" class="btn btn-secondary px-4">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            console.log("Sayfa yüklendi!");
        });
    </script>
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 600px;
    }

    h2 {
        color: #343a40;
    }

    .card {
        border-radius: 8px;
        background-color: #ffffff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .form-label {
        color: #495057;
    }

    .form-control {
        border-radius: 6px;
    }

    .invalid-feedback {
        font-size: 0.875em;
    }
</style>
