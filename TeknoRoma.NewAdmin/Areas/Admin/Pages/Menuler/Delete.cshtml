@page
@model TeknoRoma.Razorpage.Pages.Menuler.DeleteModel
@{
    ViewData["Title"] = "Menü Sil";
}

<div class="container mt-5">
    <h2 class="text-center text-danger mb-4">Menü Sil</h2>
    <div class="card shadow-lg p-4 border-danger">
        <h5 class="text-center mb-3">Bu menüyü silmek istediğinizden emin misiniz?</h5>
        <ul class="list-group mb-3">
            <li class="list-group-item"><strong>Menü Adı:</strong> @Model.MenuToDelete.MenuAdi</li>
            <li class="list-group-item"><strong>Sayfa:</strong> @Model.MenuToDelete.Page</li>
            <li class="list-group-item"><strong>İkon:</strong> @Model.MenuToDelete.Icon</li>
            <li class="list-group-item"><strong>CSS:</strong> @Model.MenuToDelete.Css</li>
            <li class="list-group-item"><strong>Alan:</strong> @Model.MenuToDelete.Area</li>
            <li class="list-group-item"><strong>Başlık:</strong> @Model.MenuToDelete.Title</li>
            <li class="list-group-item"><strong>Açıklama:</strong> @Model.MenuToDelete.Description</li>
        </ul>

        <form method="post" class="text-center">
            <button type="submit" class="btn btn-danger px-4">Sil</button>
            <a href="/Menuler/Index" class="btn btn-secondary px-4">İptal</a>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 600px;
    }

    h2 {
        color: #dc3545;
    }

    .card {
        border-radius: 8px;
        background-color: #ffffff;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #b02a37;
            border-color: #b02a37;
        }

    .list-group-item {
        font-size: 1rem;
        padding: 10px 15px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>
