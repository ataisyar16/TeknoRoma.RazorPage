@page "{id}"
@using TeknoRoma.RazorPage.Pages.Entities
@model BirimEditModel
@{
    ViewData["Title"] = "Birim Güncelle";
}

<h2>Birim Güncelle</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Birim.BirimKodu"></label>
        <input asp-for="Birim.BirimKodu" class="form-control" />
        <span asp-validation-for="Birim.BirimKodu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Birim.Aciklama"></label>
        <input asp-for="Birim.Aciklama" class="form-control" />
        <span asp-validation-for="Birim.Aciklama" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-warning">Güncelle</button>
</form>
